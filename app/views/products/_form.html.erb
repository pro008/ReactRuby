<% if @product.errors.any? %>
    <h2>The following errors could not save</h2>
    <ul>
        <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>
<div class="row">
     <div class="col-sm-12">
        <%= form_for(@product, :html => {class: "form-horizontal", role: "form"}) do |f| %>
             <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :proname %>
                </div>
                <div class="col-sm-8">
                     <%= f.text_field :proname, class: "form-control", placeholder: "Name of the reipce", autofocus: true %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :description %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_area :description, row: 10, class: "form-control", placeholder: "Enter step of recipe" %>
                </div>
            </div>
            
             <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <%= f.submit class: "btn btn-lg btn-xlarge" %>
                        </div>
            </div>
        <% end %>
        <div class="col-sm-5 col-sm-offset-4 colormatch">
            [ <%= link_to "Cancel request and return to Product listing", products_path, id:"cancel_panel" %> ]
        </div>
    </div>
</div>
