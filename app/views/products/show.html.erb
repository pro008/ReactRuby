<h1>Show Product</h1>
<hr />


<div class="well col-sm-8 col-sm-offset-2">
    <h4 class="center description"><strong>Name: <%= simple_format(@product.proname) %> </strong></h4>
    <hr />
    <%= simple_format(@product.description) %>
    <hr />
    

    <div class="recipe-actions">
            <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-xs btn-warning" %>
            <%= link_to "Delete this product", product_path(@product), method: :delete,
                                                data: {confirm: "Are you sure you want to delete this recipe"},
                                                class: "btn btn-xs btn-danger" %>
            <%= link_to "Return to Products listing", products_path, class: "btn btn-xs btn-primary" %>
    </div>
</div>